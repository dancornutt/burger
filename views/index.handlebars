<header>
   <img src="../public/assets/img/burger" alt="Burger Image" width="500" height="500">
    <h1>Eat-Da-Burger</h1> 
</header>

<section>
    <div class="row">
        <div class="column">
             <h2>Burgers that are ready for consumption</h2>
            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                     {{this.burger_name}}
                    <button id="{{this.id}}", type="button">Devour it!</button>
                </li>
                   
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="column">
            <h2>Burgers are already eaten :(</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{this.burger_name}}
                </li>

                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="column" style="text-align:center;">
            <h2>Add a Burger!</h2>
            <form class="create-form">
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burgerName">
            </div>
            <button type="submit">Add Burger</button>
            </form>
        </div>
        
    </div>
</section>
